<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Launcher Splash Screen -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <!-- Floating Action Button -->
    <style name="AppTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">#FFFFFF</item>
    </style>

    <style name="AppTheme.Fab.Action" parent="AppTheme.Fab">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fab.Refresh" parent="AppTheme.Fab">
        <item name="backgroundTint">@android:color/holo_blue_bright</item>
    </style>

</resources>
