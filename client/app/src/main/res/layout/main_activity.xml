<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_reps_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fab Menu -->
    <LinearLayout
        android:id="@+id/fab_refresh_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fab_refresh_text_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/fab_refresh_text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:fabCustomSize="46dp"
            style="@style/AppTheme.Fab.Refresh"
            app:srcCompat="@drawable/fab_refresh_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fab2_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fab2_text_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/fab2_text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:fabCustomSize="46dp"
            style="@style/AppTheme.Fab"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fab1_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fab1_text_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/fab1_text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:fabCustomSize="46dp"
            style="@style/AppTheme.Fab"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:fabSize="normal"
        style="@style/AppTheme.Fab.Action"
        app:srcCompat="@drawable/fab_action_icon" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
