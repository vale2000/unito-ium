<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unito.ium.myreps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".model.Model"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.StartUp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".controller.main.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.login.LoginActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".controller.account.AccountActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme" />
    </application>
</manifest>
