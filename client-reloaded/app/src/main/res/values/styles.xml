<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:background">@color/toolbarBackground</item>
        <item name="android:textColor">@color/toolbarTextColor</item>
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="android:textColorSecondary">@color/toolbarTextColor</item>
        <item name="android:textColorHint">@color/toolbarTextColor</item>
    </style>

    <style name="AppTheme.StartUp" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>
</resources>
